SECTION=${1:-patch}
echo "Increment $SECTION semver section. You can use also 'minor' and 'major'"
semver inc patch && \
git add .semver && \
git commit -m `semver` && \
# git tag -a `semver` -m `semver` && \
git push origin

docker build -t nexus.lgk.one:5000/druzhba-rails:`semver` . && \
docker push nexus.lgk.one:5000/druzhba-rails:`semver` && \
docker push nexus.lgk.one:5000/druzhba-rails:latest